<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignTop="@+id/audio_titlejc"
      android:layout_alignBottom="@+id/separator"
      android:orientation="horizontal"
      >

    <View
        android:id="@+id/song_progress_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#b5e6c808"
        />

    <View
        android:id="@+id/song_anti_progress_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/audio_titlejc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="15dp"
      android:gravity="start"
      android:paddingLeft="10dp"
      android:paddingStart="10dp"
      android:text="SONG TITLE"
      android:textAlignment="textStart"
      android:textSize="18sp"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:id="@+id/audio_btn"
      android:paddingTop="10dp"
      android:layout_below="@+id/audio_titlejc"
      android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/btn_down"
          android:src="@drawable/ic_file_download_black_24dp"
          android:layout_width="wrap_content"
          android:tint="#333"
          android:background="@drawable/square_border"
          android:layout_marginEnd="5dp"
          android:padding="10dp"
          android:layout_height="wrap_content"
          android:layout_gravity="end"
          android:layout_marginRight="5dp" />
      <ImageView
          android:id="@+id/btn_delete"
          android:src="@drawable/ic_delete_black_24dp"
          android:layout_width="wrap_content"
          android:tint="#333"
          android:padding="10dp"
          android:background="@drawable/square_border"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_gravity="end"
          />
    </LinearLayout>
  </LinearLayout>

  <TextView
      android:id="@+id/separator"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@+id/audio_btn"
      android:background="@android:color/darker_gray"
      android:paddingEnd="3dp"
      android:paddingStart="3dp"
      />


</RelativeLayout>
